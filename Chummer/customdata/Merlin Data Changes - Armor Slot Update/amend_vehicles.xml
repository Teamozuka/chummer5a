<!-- Changes the Armor (Drone) to its R5 stats (see German R5 196). -->
<chummer>
  <mods>
	<mod>
	<id>dfa7cdcd-5d0e-4c9c-9f0b-90bf29ac5aff</id>
	<name>Armor (Drone)</name>
	<page>129</page>
	<source>R5</source>
	<avail>FixedValues(1,2,3,4,5,6,7R,8R,9R,10R,11R,12R,RatingF)</avail>
	<category>Armor</category>
	<cost>Rating * (number(Body = 0) * 100 + Body * 200)</cost>
	<rating>99</rating>
	<ratinglabel>String_UpgradedRating</ratinglabel>
	<slots>((Rating - Armor) div 3 - 1) * number((Rating - Armor) div 3 - 1 >= 0)</slots>
	<bonus>
		<armor>Rating</armor>
	</bonus>
	<minrating>Armor + 1</minrating>
	<optionaldrone />
	<required>
		<vehicledetails>
			<category operation="contains">Drones</category>
		</vehicledetails>
	</required>
	</mod>
  </mods>
</chummer>
